#!/usr/bin/env bash
# This script configures HAProxy for load balancing between two web servers

# Student ID from intranet
STUDENT_ID="6392"
WEB01_IP="3.84.44.53"
WEB02_IP="54.172.108.60"
WEB01_HOSTNAME="${STUDENT_ID}-web-01"
WEB02_HOSTNAME="${STUDENT_ID}-web-02"

# Update and install haproxy
apt-get update -y
apt-get install -y haproxy

# Enable HAProxy to start at boot
sed -i 's/ENABLED=0/ENABLED=1/' /etc/default/haproxy

# Backup original config
cp /etc/haproxy/haproxy.cfg /etc/haproxy/haproxy.cfg.bak

# Configure haproxy
cat <<EOL > /etc/haproxy/haproxy.cfg
global
    log /dev/log    local0
    log /dev/log    local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend http_front
    bind *:80
    default_backend http_back

backend http_back
    balance roundrobin
    option httpchk HEAD / HTTP/1.1\r\nHost:localhost
    server ${WEB01_HOSTNAME} ${WEB01_IP}:80 check
    server ${WEB02_HOSTNAME} ${WEB02_IP}:80 check
EOL

# Restart HAProxy
systemctl restart haproxy
systemctl enable haproxy

# Output the required information
echo "HAProxy configured with roundrobin algorithm for:"
echo "web-01: ${WEB01_HOSTNAME} (${WEB01_IP})"
echo "web-02: ${WEB02_HOSTNAME} (${WEB02_IP})"